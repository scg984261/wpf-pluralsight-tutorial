<Window x:Class="WiredBrainCoffee.CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiredBrainCoffee.CustomerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    <Grid>
        <Button Name="NewCustomerButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="90" Height="40" Click="NewCustomerButton_Click">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images\add.png" Height="18" Margin="0,0,10,0" />
                    <TextBlock Text="Add" />
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</Window>
